$("#tasksArea").html("<%= j(render 'tasks/task', { tasks: @tasks }) %>")
$(".radio_button").prop('checked', false);
<% if params[:is_finished] == "working" %>
  $("#working").prop('checked', true);
<% elsif params[:is_finished] == "finished" %>
  $("#finished").prop('checked', true);
<% else %>
  $("#all").prop('checked', true);
<% end %>
